        app:layout_constraintTop_toBottomOf="@+id/tv_detail6" />

    <TextView
        android:id="@+id/tv_detail8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="detail8"
        android:textColor="#ffffff"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_detail6"
        app:layout_constraintStart_toStartOf="@+id/tv_detail6"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail7" />

    <TextView
        android:id="@+id/tv_detail9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="detail9"
        android:textColor="#ffffff"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_detail7"
